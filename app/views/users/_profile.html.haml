#user-profile.ui.grid
	#profile-left.ui.column.ten.wide
		#profile-name
			= "#{@user.first_name} #{@user.last_name}"
		#profile-birthday
			%span.profile-label
				Birthay 
			•
			= @user.birthday
		#profile-bio
			%span.profile-label
				Bio
			•
			= @user.bio
	#profile-right.ui.column.six.wide
		- if current_page?(:controller => 'profile', :action => 'show', :id => session[:user_id])
			#change-profile
				= link_to edit_profile_path(:id => session[:user_id]), :remote => true, class: "edit-profile-btn ui inverted red button" do
					Edit Profile

	= render :partial => 'users/edit_profile'
