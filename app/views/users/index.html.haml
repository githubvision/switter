%h1 Listing users

%table
  %thead
    %tr
      %th Username
      %th Password
      %th Email
      %th Birthday
      %th Bio
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.password
        %td= user.email
        %td= user.birthday
        %td= user.bio
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

