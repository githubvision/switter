.ui.grid
	#left-panel.four.wide.column
		- if @user.id == session[:user_id]
			= render 'swits/form'
	#center-panel.eight.wide.column
		- if @error == 'true'
			= render 'profile/error'
		= render 'users/profile'
		#profile-swits-title
			%h4
				= "#{@user.first_name}'s Swits"
		#profile-swits
			- if @swits != nil
				- @swits.each do |s|
					- @swit = s
					- @comments = @swit.comments
					= render :partial => 'swits/view_swits'
			- else
				%h4 No swits yet.
		
