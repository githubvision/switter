.create-comment
	= form_for @comment, :url => { :controller => 'comments', :action => 'create', :swit_id => @swit.id }, :html => {:class => "ui form", :method => :post }, remote: true do |f|
		.ui.grid
			.swit-post.ui.twelve.wide.column.field
				.ui.input
					= f.text_field :content,  placeholder: "Write comment",  class: "comment-textarea"
			.swit-submit.ui.four.wide.column.field
				= f.submit 'Create Comment', class: "ui fluid large teal button disabled createcomm-btn"